<div class="content">
  <h1>Patient Profile</h1>
  <div class="panels" id="index_panels">
    <div class="panel_container index" id="panel_filter">
      <button onclick="window.location = '/patients/overview';" type="button" id="back_button"><div class="panel shade_1">
        <div class="panel_content">Back</div></div></button>
    </div>
  </div>
  <lj-raw>
<lj-cut>

<div class="report_container">

<div class="report_tabs">
  <div class="report_tabs_filler"> </div>
  <a href="#1" class="report_anchor">RESIDENT INFORMATION</a>
  <a href="#2" class="report_anchor">ADDITIONAL CLINICAL DATA</a>
</div>


<div class="info_section_container">
<a name="1"></a><div class="info_section">
<span class="section_header style1">RESIDENT INFORMATION</span>

<br/>

<table cellspacing="5px" class="patient_record_table">
<tr>
<td class="title">NAME</td>
<td class="data"><%= @patient[mapper("Suffix")]%> <%= @patient[mapper("First_Name")]%> <%= @patient[mapper("Last_Name")]%></td>
<td class="title">GENDER</td>
<td class="data"><%= @patient[mapper("Gender")]%></td>
</tr>
<tr>
<td class="title">NICKNAME(S)</td>
<td class="data"><%= @patient[mapper("Nickname")] %></td>
<td class="title">RACE</td>
<td class="data"><%= @patient[mapper("Race")] %></td>
</tr>
<tr>
<td class="title">Start Date</td>
<td class="data"><%= @patient[mapper("Residency_Start")] %></td>
<td class="title">End Date</td>
<td class="data"><%= @patient[mapper("Residency_End")] %></td>
</tr>
<tr>
<td class="title">DOB</td>
<td class="data"><%=@patient[mapper("Birthday")]%></td>
<td class="title">LANGUAGE</td>
<td class="data"><%=@patient[mapper("Religion")]%></td>
</tr>
<tr>
<td class="title">PHONE</td>
<td class="data"><%=@patient[mapper("Phone")]%></td>
<td class="title">MARITAL STATUS</td>
<td class="data"><%=@patient[mapper("Marital_status")]%></td>
</tr>
<tr>
<td class="title">RESIDENCE</td>
<td class="data"><%= @patient[mapper("Apartment_Number")] %></td>
<td class="title">MEDICARE</td>
<td class="data"><%= @patient[mapper("Medicare")] %></td>
</tr>
</table>


</div>

<a name="2"></a><div class="info_section">
<span class="section_header style1">ADDITIONAL CLINICAL DATA</span>
<%=@patient[mapper("Notes:")]%>

<table cellspacing="5px" class="patient_record_table">
<tr>
<td class="title">NAME</td>
<td class="data"><%= @patient[mapper("Suffix")]%> <%= @patient[mapper("First_Name")]%> <%= @patient[mapper("Last_Name")]%></td>
<td class="title">STATUS</td>
<td class="data"><%= @patient[mapper("Status_(ie:Respite/EOL/hospice)")]%></td>
</tr>
<tr>
<td class="title">ALLERGIES</td>
<td class="data"><%= @patient[mapper("Allergies")] %></td>
<td class="title">LAST PNEUMONIA SHOT</td>
<td class="data"><%= @patient[mapper("Last_Pneumonia_shot")] %></td>
</tr>
<tr>
<td class="title">LAST FLU SHOT</td>
<td class="data"><%= @patient[mapper("Last_flu_shot")] %></td>
<td class="title">LAST TB TEST</td>
<td class="data"><%= @patient[mapper("Last TB Test")] %></td>
</tr>
<tr>
<td class="title">TASK RATING</td>
<td class="data"><%=@patient[mapper("task_Rating")]%></td>
<td class="title">PHARMACY PREFERENCE</td>
<td class="data"><%=@patient[mapper("pharmacy_Preference")]%></td>
</tr>
<tr>
<td class="title">INSURANCE</td>
<td class="data"><%=@patient[mapper("Insurance_1_Label")]%></td>
<td class="title">SUBSTANCE USE</td>
<td class="data"><%=@patient[mapper("Substance_Use_Hx")]%></td>
</tr>
<tr>
<td class="title">HOSPITAL PREFERENCE</td>
<td class="data"><%= @patient[mapper("hospital_Preference")] %></td>
<td class="title">FUNERAL HOME PREFERENCE</td>
<td class="data"><%= @patient[mapper("funeral_Home_Pref")] %></td>
</tr>
</table>
</div>



</div>

</div>

