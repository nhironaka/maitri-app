<div class="half-width-shifted">
  <img src="/assets/Maitri_large.png">
  <div class="sign_">
    <h1>Welcome</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p><%= f.label :login %><br />
        <%= f.text_field :login %></p>
      </div>
    
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Log In", :class=>"option-button" %>
      </div>
      <div class="flash">
      <p><%= notice %></p>
      <p><%= alert %></p>
    </div>
    <% end %>
  </div>
  
</div>
